{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список книг</h1>
    <div id="page">
    {% for entity in entities %}
        <div class="entity">
            <div class="entity_cover">
                {% if entity.WebCoverPath %}
                    <img src="{{ asset(entity.WebCoverPath) }}" width="100" height="100" />
                {% else %}
                    <img src="{{ asset('bundles/intarobook/img/default_cover.png') }}" width="100" height="100" />
                {% endif %}
            </div><!--.entity_cover-->
            <div class="entity_content">
                <p><span class="entity_label">Название:</span> {{ entity.title }}</p>
                <p><span class="entity_label">Автор:</span> {{ entity.author }}</p>
                <br />
                <p>
                    {% if entity.allowDownload %}
                           <a href="{{ entity.path }}">Скачать</a>
                    {% endif %}
                    <a href="{{ path('book_edit', { 'id': entity.id }) }}">Редактировать</a>
                </p>
            </div><!--.entity_content-->
        </div><!--.entity--> 
    {% endfor %}
    <nav class="entity_nav">
        <ul>
            <li>
                <a href="{{ path('book_new') }}">
                    Добавить книгу
                </a>
            </li>
        </ul>
    </nav>
    </div><!--#page-->
{% endblock %}
